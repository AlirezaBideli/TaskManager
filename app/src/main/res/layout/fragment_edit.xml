<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    tools:context="com.example.admin.software_1.controllers.fragments.EditFragment">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <ImageView
            android:id="@+id/chooseImage_img_EditFragment"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@mipmap/camera" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/take_image_btn_EditFragment"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/gallery_thumb"
                android:text="@string/take_Photo"
                android:layout_marginRight="8dp"/>
            <Button
                android:id="@+id/choose_image_btn_EditFragment"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/gallery_thumb"
                android:text="@string/choose_Photo" />
        </LinearLayout>
        <TextView
            style="@style/show_detail_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title" />

        <EditText
            android:id="@+id/title_editText_EditFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp" />

        <TextView

            style="@style/show_detail_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Desc" />

        <EditText
            android:id="@+id/description_editText_EditFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="98dp" />


        <TextView
            style="@style/show_detail_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Date"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="145dp" />

        <Button
            android:id="@+id/setDate_btn_EditFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/set_date"
            android:textSize="8sp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="309dp" />

        <TextView
            style="@style/show_detail_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Hour"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="227dp" />

        <Button
            android:id="@+id/setTime_btn_EditFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/setTime_btn"
            android:textSize="8sp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="376dp" />

        <CheckBox
            android:id="@+id/taskType_checkbox_EditFragment"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:text="@string/tab_name_Done"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="264dp" />


        <Button
            android:id="@+id/done_button_EditFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Done"
            android:textSize="8sp"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="432dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
